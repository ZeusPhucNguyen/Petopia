<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivCover"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_pet"
            app:riv_corner_radius="20dp" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="18dp"
            android:lines="2"
            android:maxLines="2"
            android:text="Dr.Jaydon Vetrovs"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/textType"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tvServiceName"
            android:layout_marginLeft="150dp"
            android:src="@drawable/pet_location" />

        <TextView
            android:id="@+id/tvServiceLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvServiceName"
            android:layout_toRightOf="@id/textType"
            android:maxLines="1"
            android:text="CauGiay,HaNoi, VietNam"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/textPrice"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/tvServiceLocation"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/phone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvServiceLocation"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/textPrice"
            android:paddingBottom="5dp"
            android:text="01297652214"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>